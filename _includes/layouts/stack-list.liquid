---
layout: _html
---
{%- render "partials/header", collectionsAll: collections.all, page: page -%}
<div id="notesContainer">
  <div class="note" data-note-url="{{ page.url }}">
    <div id="notesHeader">
      <div id="notesListHeaderWrapper">
          <h1>{{ title }}</h1>
      </div>
    </div>
    <div id="notesList">
      {%- for card in collections[collectionKey] reversed -%}
        <div class="noteItem" id="{{ card.data.page.fileSlug }}">
            <div class="noteWrapper">
                <div class="content markdown-body">
                  <h2>
                    <a href="{{ env.SERVER_DOMAIN | append: card.url }}">{{ card.data.title }}</a>
                  </h2>
                  {{ card.data.description }}
                </div>
                <div class="metaInfo">
                    <a class="noteURL" href="{{ env.SERVER_DOMAIN | append: card.url }}" target="_blank">Permanent Link</a> Â·
                    <time class="updatedAt">Updated: {{ card.date | postDate }}</time>
                </div>
            </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>